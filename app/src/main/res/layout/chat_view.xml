<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/message_head"
        android:layout_width="@dimen/headimg_size"
        android:layout_height="@dimen/headimg_size"
        android:src="@drawable/xs"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/message_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/recipe_small_size"
        android:text="name xxx"
        app:layout_constraintStart_toEndOf="@id/message_head"
        app:layout_constraintTop_toTopOf="@id/message_head" />

    <TextView
        android:id="@+id/message_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/fontgray"
        android:textSize="@dimen/recipe_small_size"
        app:layout_constraintStart_toEndOf="@id/message_head"
        app:layout_constraintTop_toBottomOf="@id/message_name" />

    <TextView
        android:id="@+id/chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:11"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>