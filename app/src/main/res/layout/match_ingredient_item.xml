<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/menu01"
        android:layout_width="193dp"
        android:layout_height="202dp"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <ImageView
        android:id="@+id/picture01"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/chickenwings"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias=".7"
        app:layout_constraintEnd_toEndOf="@+id/menu01"
        app:layout_constraintStart_toStartOf="@+id/menu01"
        app:layout_constraintTop_toTopOf="@+id/menu01"/>

    <TextView
        android:id="@+id/title01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="鸡翅"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/picture01"
        app:layout_constraintStart_toStartOf="@+id/picture01"
        app:layout_constraintTop_toBottomOf="@+id/picture01"/>







</androidx.constraintlayout.widget.ConstraintLayout>