<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchIngredient">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/icon_back"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="15dp"
        />

    <SearchView
        android:id="@+id/search_box"
        android:layout_width="240dp"
        android:layout_height="43dp"
        android:background="#F1EFEF"
        app:queryHint="请输入搜索内容"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageView2"
        android:layout_margin="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/search_box"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp"
        />

    <RelativeLayout
        android:id="@+id/ingredient01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_box"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        >

        <ImageView
            android:id="@+id/picture01"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chickenwings" />

        <TextView
            android:id="@+id/igName01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/picture01"
            android:text="鸡翅"
            android:textColor="#000000"
            android:textSize="22sp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/igName01"
            android:layout_marginLeft="100dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_plus_mdpi"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ingredient02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ingredient01"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        >

        <ImageView
            android:id="@+id/picture02"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chickenbreast" />

        <TextView
            android:id="@+id/igName02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/picture02"
            android:text="鸡胸"
            android:textColor="#000000"
            android:textSize="22sp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/igName02"
            android:layout_marginLeft="100dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_plus_mdpi"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ingredient03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ingredient02"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        >

        <ImageView
            android:id="@+id/picture03"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/drumsticks" />

        <TextView
            android:id="@+id/igName03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/picture03"
            android:text="鸡腿"
            android:textColor="#000000"
            android:textSize="22sp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/igName03"
            android:layout_marginLeft="100dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_plus_mdpi"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ingredient04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ingredient03"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        >

        <ImageView
            android:id="@+id/picture04"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chicken" />

        <TextView
            android:id="@+id/igName04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/picture04"
            android:text="鸡肉"
            android:textColor="#000000"
            android:textSize="22sp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/igName04"
            android:layout_marginLeft="100dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_plus_mdpi"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ingredient05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ingredient04"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        >

        <ImageView
            android:id="@+id/picture05"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/eggs" />

        <TextView
            android:id="@+id/igName05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/picture05"
            android:text="鸡蛋"
            android:textColor="#000000"
            android:textSize="22sp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/igName05"
            android:layout_marginLeft="100dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_plus_mdpi"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>