<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.View.ViewFragment">

   <ImageView
       android:id="@+id/search_box2_view"
       android:layout_width="240dp"
       android:layout_height="43dp"
       android:layout_margin="20dp"
       android:background="#F1EFEF"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="美食"
       android:textColor="@color/gray_2"
       android:textSize="20dp"
       app:layout_constraintStart_toStartOf="@id/search_box2_view"
       app:layout_constraintEnd_toEndOf="@id/search_box2_view"
       app:layout_constraintTop_toTopOf="@id/search_box2_view"
       app:layout_constraintBottom_toBottomOf="@id/search_box2_view"
       android:gravity="center"
      />


   <ImageView
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:src="@drawable/search"
       android:layout_marginStart="5dp"
       app:layout_constraintBottom_toBottomOf="@+id/search_box2_view"
       app:layout_constraintStart_toStartOf="@+id/search_box2_view"
       app:layout_constraintTop_toTopOf="@+id/search_box2_view" />

   <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
       android:id="@+id/myfresh"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/search_box2_view">

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/view_lv"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          app:layout_constraintTop_toBottomOf="@id/search_box2_view"
          app:layout_constraintBottom_toBottomOf="parent"
          />
   </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>