<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/ingredient01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        >

        <ImageView
            android:id="@+id/picture01"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chickenwings" />

        <TextView
            android:id="@+id/igName01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/picture01"
            android:text="鸡翅"
            android:textColor="#000000"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/add_ingre"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/igName01"
            android:layout_marginLeft="100dp"
            android:src="@drawable/add"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>